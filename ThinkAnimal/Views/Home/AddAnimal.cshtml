@model ThinkAnimal.Models.Feature
<h2>Add new animal and feature</h2>
@using (Html.BeginForm())
{
    <fieldset>
        @Html.ValidationSummary()
        <p>Animal</p>
        <div>
            @Html.EditorFor(model => model.Animal.Title)
        </div>
        <p>Feature</p>
        <div>
            @Html.EditorFor(model => model.Text)
        </div>
        @Html.HiddenFor(model => model.ParentFeatureId)
        @Html.HiddenFor(model => model.ParentFeatureAnswerIsYes)
        <input value="Add animal and feature" class="btn btn-primary btn-large" type="submit"/>
    </fieldset>
}
